{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "esnext",
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["../../src/*"]
    },
    "types": ["@types/deno"],
    "lib": [
      "deno.ns",
      "dom",
      "esnext"
    ]
  },
  "include": ["./**/*.ts"]
}